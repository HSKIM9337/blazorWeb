@page "/signup"

<div class="wrapper">
		<div class="wrapper_image" style="display:flex; justify-content : center;">
			<image src="images/mainlogo.svg" style="width:auto; height:auto;"></image>
		</div>
		<div class="p-header-top">
		<div class="p-header-left" style="display:flex; justify-content : center;">
				<h1 class="top-main">
					회원가입
				</h1>
			</div>
		</div>
		<EditForm Model=@user style="display:flex; flex-direction:column;">
			<DataAnnotationsValidator />
			<ValidationSummary />
			<div class="Register-form-group">
				<label for="Input-Email" style="flex-shrink:0; color:black; margin-bottom:3px; ">이메일</label>
				<div class="col-sm-10">
					<InputText id="Input-Email" placeholder="Email" type="email" @bind-Value="user.Email"
							   style="width:100%; border:1px solid black;  border-radius: 3px;
					line-height: 35px;
					font-size: 12px;
					padding-left: 10px;
					padding-right: 10px;
margin-bottom:5px;" />
				<ValidationMessage For="@(()=> user.Email)" />
				</div>
			</div>

			<div class="Register-form-group">
				<label for="Input-Password" style="flex-shrink:0; color:black; margin-bottom:3px; ">비밀번호</label>
				<div class="col-sm-10">
					<InputText id="Input-Password" placeholder="password" type="password" @bind-Value="user.Password"
							   style="width:100%; border:1px solid black;  border-radius: 3px;
					line-height: 35px;
					font-size: 12px;
					padding-left: 10px;
					padding-right: 10px;
margin-bottom:5px;" />
				<ValidationMessage For="@(()=> user.Password)" />
				</div>
			</div>

			<div class="Register-form-group">
				<label for="Input-passwordCheck" style="flex-shrink:0; color:black; margin-bottom:3px; ">비밀번호확인</label>
				<div class="col-sm-10">
					<InputText id="Input-passwordCheck" placeholder="passwordCheck" type="password" @bind-Value="user.PasswordCheck"
							   style="width:100%; border:1px solid black;  border-radius: 3px;
					line-height: 35px;
					font-size: 12px;
					padding-left: 10px;
					padding-right: 10px;
margin-bottom:5px;" />
				<ValidationMessage For="@(()=> user.PasswordCheck)" />
				</div>
			</div>

			<div class="Register-form-group">
				<label for="Input-Name" style="flex-shrink:0; color:black; margin-bottom:3px; "> 이름 </label>
				<div class="col-sm-10">
					<InputText id="Input-Name" placeholder="이름" type="text" @bind-Value="user.Name"
							   style="width:100%; border:1px solid black;  border-radius: 3px;
					line-height: 35px;
					font-size: 12px;
					padding-left: 10px;
					padding-right: 10px;
margin-bottom:5px;" />
				<ValidationMessage For="@(()=> user.Name)" />
				</div>
			</div>

			<div class="Register-form-group">
				<label for="Input-PhoneNum" style="flex-shrink:0; color:black; margin-bottom:3px; "> 전화번호 </label>
				<div class="col-sm-10">
					<InputText id="Input-PhoneNum" placeholder="01012345678" type="text" @bind-Value="user.PhoneNum"
							   style="width:100%; border:1px solid black;  border-radius: 3px;
					line-height: 35px;
					font-size: 12px;
					padding-left: 10px;
					padding-right: 10px;
margin-bottom:5px;" />
				<ValidationMessage For="@(()=> user.PhoneNum)" />
				</div>
			</div>

			<div class="Register-form-group">
				<div class="col-sm-10">
					<input id="Input-personlCheckBox" type="checkbox" style="margin-right:5px" />
					<label style="flex-shrink:0; color:black; "> (필수)개인정보동의 </label>
				</div>
			</div>

			<div class="Register-form-group">
				<div class="col-sm-10">
					<input id="Input-personlCheckBox" type="checkbox" style="margin-right:5px" />
					<label style="flex-shrink:0; color:black; "> (선택)각종 소식을 받아보세요. </label>
				</div>
			</div>

			<div class="Register-form-group" style="margin-top:20px">
				<div class="col-sm-10">
					<label style="flex-shrink:0; color:black; "> 이미 계정이 있으신가요? </label>
					<a href=""> 로그인 </a>

				</div>
			</div>

			<div class="Register-form-group" style="margin-top:20px">
				<div class="col-sm-10">
					
				</div>
			</div>




		</EditForm>

	</div>